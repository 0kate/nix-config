{
  "icon_theme": "Bearded Icon Theme",
  "vim_mode": true,
  "terminal": {
    "font_family": "Hack Nerd Font",
    "line_height": "standard"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_features": {
    "calt": false // Disable ligatures
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Github Dark Dimmed"
  },
  "lsp": {
    "jdtls": {
      "initialization_options": {
        "settings": {
          "java": {
            "import": {
              "gradle": {
                "enabled": true
              },
              "maven": {
                "enabled": true
              }
            },
            "jdt": {
              "ls": {
                "lombokSupport": {
                  "enabled": true
                }
              }
            }
          }
        }
      }
    }
  },
  "languages": {
    "Java": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "./gradlew",
          "arguments": ["--no-daemon", "spotlessApply"]
        }
      }
    }
  }
}
